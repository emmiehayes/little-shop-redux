  <p>Edit <%= @item.title %>:</p>
<form class='edit-item' action='/items/<%= @item.id %>' method='POST'>
  <label>Title</label>
  <input type='hidden' name='_method' value='PUT'>
  <input type='text' name='item[title]' value='<%= @item.title %>'>
  <label>Description</label>
  <textarea name='item[description]'><%= @item.description %></textarea><br/>
  <label>Price</label>
  <input type='text' name='item[price]' value='<%= @item.price %>'>
  <label>Image URL</label>
  <input type='text' name='item[image]' value='<%= @item.image %>'>
  <input type='submit' value='Update Item'>
</form>
